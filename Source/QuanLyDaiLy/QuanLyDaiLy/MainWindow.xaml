<Window x:Class="QuanLyDaiLy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyDaiLy"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1024"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
     TextElement.Foreground="{DynamicResource MaterialDesignBody}"
     TextElement.FontWeight="Regular"
     TextElement.FontSize="13"
     TextOptions.TextFormattingMode="Ideal"
     TextOptions.TextRenderingMode="Auto"
     Background="{DynamicResource MaterialDesignPaper}"
     FontFamily="{DynamicResource MaterialDesignFont}"
        WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">

	<Window.Resources>
		<!--//Toggle btn style-->
		<ImageBrush ImageSource="Assets/tgBtn_MouseOver.png" x:Key="tb_mouse_over" />
		<!--//Text font style-->
		<Style x:Key="font_style" TargetType="TextBlock">
			<Setter Property="FontFamily" Value="Fonts/Roboto-Light.ttf #Roboto" />
			<Setter Property="VerticalAlignment" Value="Center" />
			<Setter Property="HorizontalAlignment" Value="Left" />
			<Setter Property="Foreground" Value="White" />
			<Setter Property="FontSize" Value="20" />
		</Style>

		<!--//Tooltip Style-->
		<Style TargetType="ToolTip" x:Key="tt_style">
			<Setter Property="Placement" Value="Right" />
			<Setter Property="Height" Value="40" />
			<Setter Property="Width" Value="100" />
			<Setter Property="Margin" Value="20,0,0,0" />
			<Setter Property="Background" Value="#4A5668" />
			<Setter Property="BorderBrush" Value="Transparent" />
			<Setter Property="Foreground" Value="White" />
			<Setter Property="FontFamily" Value="Fonts/Roboto-Light.ttf #Roboto" />
			<Setter Property="FontSize" Value="16" />
			<Setter Property="PlacementRectangle" Value="60,0,0,0" />
			<Setter Property="HorizontalOffset" Value="15" />
			<Setter Property="VerticalOffset" Value="6" />
			<Setter Property="HasDropShadow" Value="True" />
			<Setter Property="HorizontalContentAlignment" Value="Center" />
		</Style>

		<!--//togglebutton style-->
		<Style x:Key="tb_style" TargetType="{x:Type ToggleButton}">
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type ToggleButton}">
						<Border x:Name="border" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">

						</Border>

						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter Property="Background" TargetName="border" Value="{StaticResource tb_mouse_over}">

								</Setter>

								<Setter Property="BorderBrush" TargetName="border" Value="{StaticResource tb_mouse_over}">

								</Setter>
							</Trigger>

							<Trigger Property="IsChecked" Value="True">
								<Setter Property="Background" TargetName="border" Value="{StaticResource tb_mouse_over}" />
								<Setter Property="BorderBrush" TargetName="border" Value="{StaticResource tb_mouse_over}" />
							</Trigger>

						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<!--//button next, prev style-->
		<Style x:Key="next_prev_btn" TargetType="{x:Type Button}">

			<Setter Property="Template">

				<Setter.Value>

					<ControlTemplate TargetType="{x:Type Button}">

						<Border x:Name="button"
                                BorderThickness="0"
                                Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="True">

						</Border>

					</ControlTemplate>

				</Setter.Value>

			</Setter>

		</Style>

		<!--//dish-->
		<Style x:Key="dish_btn" TargetType="{x:Type Button}">

			<Setter Property="Template">

				<Setter.Value>

					<ControlTemplate TargetType="{x:Type Button}">

						<Border x:Name="button"
                                BorderThickness="0"
                                Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="True">

						</Border>

					</ControlTemplate>

				</Setter.Value>

			</Setter>

		</Style>
	</Window.Resources>

	<Grid>
		<!--//Background color-->
		<Grid Background="Black">

			<!--//background image-->
            <Grid x:Name="bg" PreviewMouseLeftButtonDown="bg_PreviewMouseLeftButtonDown" Margin="0,2,0,-2"
                  Visibility="Visible"
                  Background="White">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--Background Home Screen-->
                <Grid x:Name="bg_home" Grid.Column="1" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border  Background="#2E333A" Padding="10,0,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="320" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Content="QUẢN LÝ ĐẠI LÝ" HorizontalAlignment="Center"
                           VerticalAlignment="Center" FontSize="35" FontWeight="ExtraBold"
                           Foreground="#FFFFBD0B" Background="{x:Null}"/>

                            <Grid Grid.Column="2" Margin="10,0">
                                <TextBox x:Name="textbox_search" Grid.Column="1" HorizontalAlignment="Right" Visibility="Visible" VerticalAlignment="Center" Background="White"
								FontSize="18"
								Width="300"
								BorderThickness="0"
								materialDesign:HintAssist.Hint="Enter the keyword..."
								materialDesign:TextFieldAssist.HasOutlinedTextField="True"
								materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
								materialDesign:TextFieldAssist.TextFieldCornerRadius="8"
								TextChanged="textbox_search_TextChanged"/>

                                <Image Grid.Column="2" x:Name="icon_search" Source="/Assets/search.png" HorizontalAlignment="Right" Panel.ZIndex="5" 
                           Width="40" Height="40" VerticalAlignment="Center"
                           Margin="0,0,10,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                            </Grid>

                            <Border CornerRadius="10"  Grid.Column="1">
                                <ComboBox Padding="5,15,0,15" Background="White" HorizontalAlignment="Right" Width="120" >
                                    <ComboBoxItem IsSelected="True">
                                        <TextBlock Text="Đại lý" FontWeight="Bold" />
                                    </ComboBoxItem>
                                    <ComboBoxItem>
                                        <TextBlock Text="Sản phẩm" FontWeight="Bold" />
                                    </ComboBoxItem>
                                    <ComboBoxItem>
                                        <TextBlock Text="Nhà cung cấp" FontWeight="Bold" />
                                    </ComboBoxItem>

                                </ComboBox>
                            </Border>
                        </Grid>
                    </Border>

                    <!--TODO SomeThing-->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Hidden">
                        <StackPanel>
                            <!--Sản phẩm bán chạy-->
                            <TextBlock Text="Sản phẩm bán chạy" FontSize="25" HorizontalAlignment="Center" Foreground="Blue" Margin="10,15" FontWeight="UltraBlack" materialDesign:ThemeAssist.Theme="Dark" FontFamily="Cooper Black" />

                            <Border Height="400" Margin="40,0" >
                                <Border.Background>
                                    <ImageBrush Stretch="Fill" ImageSource="Assets/podium_awards.png"/>
                                </Border.Background>

                                <Grid Margin="35,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <!--top 2-->
                                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Right">
                                        <Border  Margin="0,85,0,0"  CornerRadius="50" Height="120" Width="200">
                                            <Border.Background>
                                                <ImageBrush x:Name="imgSanPhamTop2" ImageSource="/Images/Product/1.png" Stretch="UniformToFill" />

                                            </Border.Background>

                                        </Border>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="Đã bán: " FontSize="14"  FontWeight="Black" Foreground="Black"/>
                                            <TextBlock x:Name="txtSoLuongBanTop2" Text="1.500" FontSize="14" FontWeight="Black" Foreground="Red"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!--top 1-->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Center">
                                        <Border  Margin="0,0,0,0"  CornerRadius="50" Height="130" Width="200">
                                            <Border.Background>
                                                <ImageBrush x:Name="imgSanPhamTop1" ImageSource="/Images/Product/1.png" Stretch="UniformToFill" />

                                            </Border.Background>

                                        </Border>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="Đã bán: " FontSize="14"  FontWeight="Black" Foreground="Black"/>
                                            <TextBlock x:Name="txtSoLuongBanTop1" Text="1.500" FontSize="14" FontWeight="Black" Foreground="Red"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!--top 3-->
                                    <StackPanel Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Left">
                                        <Border  Margin="0,105,0,0"  CornerRadius="50" Height="130" Width="200">
                                            <Border.Background>
                                                <ImageBrush x:Name="imgSanPhamTop3" ImageSource="/Images/Product/1.png" Stretch="UniformToFill" />

                                            </Border.Background>

                                        </Border>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="Đã bán: " FontSize="14"  FontWeight="Black" Foreground="Black"/>
                                            <TextBlock x:Name="txtSoLuongBanTop3" Text="1.500" FontSize="14" FontWeight="Black" Foreground="Red"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!--Top Đại lý-->
                            <TextBlock Text="Đại lý top đầu" FontSize="25" HorizontalAlignment="Center" Foreground="Blue" Margin="10,20,10,10" FontWeight="UltraBlack" materialDesign:ThemeAssist.Theme="Dark" FontFamily="Cooper Black" />
                            <Border Height="400" Margin="40,0" >
                                <Border.Background>
                                    <ImageBrush Stretch="Fill" ImageSource="Assets/podium_awards.png"/>
                                </Border.Background>

                                <Grid Margin="35,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <!--top 2-->
                                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Right">
                                        <Border  Margin="0,85,0,0"  CornerRadius="50" Height="120" Width="200">
                                            <Border.Background>
                                                <ImageBrush x:Name="imgDaiLyTop2" ImageSource="/Images/Product/1.png" Stretch="UniformToFill" />

                                            </Border.Background>

                                        </Border>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock x:Name="txtDaiLyTop2" Text="105.550.500 VNĐ" FontSize="14" FontWeight="Black" Foreground="Red"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!--top 1-->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Center">
                                        <Border  Margin="0,0,0,0"  CornerRadius="50" Height="130" Width="200">
                                            <Border.Background>
                                                <ImageBrush x:Name="imgDaiLyTop1" ImageSource="/Images/Product/1.png" Stretch="UniformToFill" />

                                            </Border.Background>

                                        </Border>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock x:Name="txtDaiLyTop1" Text="105.550.500 VNĐ" FontSize="14" FontWeight="Black" Foreground="Red"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!--top 3-->
                                    <StackPanel Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Left">
                                        <Border  Margin="0,105,0,0"  CornerRadius="50" Height="130" Width="200">
                                            <Border.Background>
                                                <ImageBrush x:Name="imgDaiLyTop3" ImageSource="/Images/Product/1.png" Stretch="UniformToFill" />

                                            </Border.Background>

                                        </Border>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock x:Name="txtDaiLyTop3" Text="105.550.500 VNĐ" FontSize="14" FontWeight="Black" Foreground="Red"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>

                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                </Grid>

                <!--Màn hình quản lý đại lý-->
                <Grid Grid.Column="1" x:Name="bg_daily" Visibility="Visible">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--Row 1-->
                    <Border Background="#2E333A">
                        <Grid>
                            <Label Content="Quản lý đại lý" VerticalContentAlignment="Center" FontWeight="ExtraBold" FontSize="30" Foreground="#FFFFBD0B" Margin="20,0,0,0"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Label Name="DaiLy_lable_Them" Content="Tiếp nhận đại lý" VerticalContentAlignment="Center" FontWeight="ExtraBold" FontSize="20" PreviewMouseLeftButtonDown="DaiLy_lable_Them_PreviewMouseLeftButtonDown" Foreground="#FFFFBD0B"/>
                                <Image x:Name="DaiLy_button_Them" Source="/Assets/add.png" RenderOptions.BitmapScalingMode="HighQuality" PreviewMouseLeftButtonDown="DaiLy_button_Them_PreviewMouseLeftButtonDown" Width="40" Height="40"/>
                                <TextBox x:Name="DaiLy_textbox_search" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="40,0,0,0" Background="White"
								FontSize="18"
								Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}"
								Width="300"
								BorderThickness="0"
								materialDesign:HintAssist.Hint="Nhập tên đại lý..."
								materialDesign:HintAssist.IsFloating="True"
								materialDesign:TextFieldAssist.HasClearButton="True"
								materialDesign:TextFieldAssist.HasOutlinedTextField="True"
								materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
								materialDesign:TextFieldAssist.TextFieldCornerRadius="4"
								TextChanged="DaiLy_textbox_search_TextChanged"/>
                                <Image x:Name="DaiLy_button_Search" Source="/Assets/search.png" PreviewMouseLeftButtonDown="DaiLy_button_Search_PreviewMouseLeftButtonDown" RenderOptions.BitmapScalingMode="HighQuality" Width="40" Height="40"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!--Row 2-->
                    <Border Grid.Row="1" Grid.ColumnSpan="2" Margin="25, 20, 25,20"
                    CornerRadius="10" BorderThickness="1" BorderBrush="#FF484848" >
                        <ListView Name="listDaiLy" FontSize="16" SelectionChanged="listDaiLy_SelectionChanged" HorizontalContentAlignment="Center" >
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Width="auto">
                                        <GridViewColumn.Header>Tên đại lý</GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Ten}" FontSize="15" TextAlignment="Center" Width="auto" TextWrapping="WrapWithOverflow" VerticalAlignment="Center"></TextBlock>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Width="auto">
                                        <GridViewColumn.Header>Số điện thoại</GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding DienThoai}" FontSize="15" TextAlignment="Center" Width="auto" TextWrapping="WrapWithOverflow" VerticalAlignment="Center"></TextBlock>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Width="auto">
                                        <GridViewColumn.Header>Địa chỉ</GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding DiaChi}" FontSize="15" TextAlignment="Justify" Width="auto" Margin="15,0,0,0" TextWrapping="WrapWithOverflow" VerticalAlignment="Center"></TextBlock>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Width="auto">
                                        <GridViewColumn.Header>Ngày tiếp nhận</GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding NgayTiepNhan}" FontSize="15" TextAlignment="Right" Width="auto" VerticalAlignment="Center"></TextBlock>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Width="auto">
                                        <GridViewColumn.Header>Quận</GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Quan}" FontSize="15" TextAlignment="Right" Width="auto" VerticalAlignment="Center"></TextBlock>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Width="auto">
                                        <GridViewColumn.Header>Email</GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Email}" FontSize="15" TextAlignment="Right" Width="auto" VerticalAlignment="Center"></TextBlock>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Width="auto">
                                        <GridViewColumn.Header>Loại đại lý</GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding LoaiDaiLy}" FontSize="15" TextAlignment="Right" Width="auto" VerticalAlignment="Center"></TextBlock>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Border>
                </Grid>

                <!--Màn hình sản phẩm-->
                <Grid x:Name="bg_sanpham" Grid.Column="1" Visibility="Collapsed">
                    <Label Content="San Pham"/>
                </Grid>

                <!--Màn hình phiếu thu tiền-->
                <Grid x:Name="bg_phieuthutien" Grid.Column="1" Visibility="Collapsed">
                    <Label Content="Phiếu thu tiền"/>
                </Grid>

                <!--Màn hình phiếu xuất hàng-->
                <Grid x:Name="bg_phieuxuathang" Grid.Column="1" Visibility="Collapsed">
                    <Label Content="Phiếu xuất hàng"/>
                </Grid>

                <!--Background contact-->
                <Grid Grid.Column="1" x:Name="contact_screen" Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid x:Name="Vuong" Grid.Column="0" Margin="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="50" />
                                <RowDefinition Height="90" />
                            </Grid.RowDefinitions>

                            <Border CornerRadius="100">
                                <Border.Background>
                                    <ImageBrush Stretch="UniformToFill" ImageSource="/Assets/Vuong.jpg" RenderOptions.BitmapScalingMode="HighQuality"/>
                                </Border.Background>
                            </Border>

                            <Label Content="Phạm Minh Vương"
                               Grid.Row="1" HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               FontWeight="Bold" FontSize="25"/>
                            <Label Grid.Row="2"  Content="Email: 18120655@student.hcmus.edu.vn"
                               VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                               FontWeight="Bold" FontSize="14"/>
                        </Grid>
                    </Grid>

                    <Grid x:Name="That" Grid.Column="1" Margin="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="50" />
                                <RowDefinition Height="90" />
                            </Grid.RowDefinitions>

                            <Border CornerRadius="100">
                                <Border.Background>
                                    <ImageBrush Stretch="UniformToFill" ImageSource="/Assets/That.jpg" RenderOptions.BitmapScalingMode="HighQuality"/>
                                </Border.Background>
                            </Border>

                            <Label Content="Phạm Văn Thật"
                               Grid.Row="1" HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               FontWeight="Bold" FontSize="25"/>
                            <Label Grid.Row="2"  Content="Email: 18120568@student.hcmus.edu.vn"
                               VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                               FontWeight="Bold" FontSize="14"/>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>


            <!--//navigation panel // bảng điều hướng-->
			<Grid x:Name="nav_pnl" HorizontalAlignment="Left" Width="65" Background="#2E333A">
				<StackPanel x:Name="st_pnl">
					<!--//Grid chuyển đổi menu-->
					<Grid Height="90">
						<!--//text tiêu để menu-->
						<TextBlock Grid.Row="1" Grid.Column="0" Margin="73,-20,0,0" Text="MENU" Foreground="White"
                                   FontSize="22" Background="Transparent" HorizontalAlignment="Left" VerticalAlignment="Center"
                                   Style="{StaticResource font_style}">
                            
                            <!--//Shadow-->
							<TextBlock.Effect>
								<DropShadowEffect BlurRadius="10" ShadowDepth="1" Direction="-90" Color="White" />
							</TextBlock.Effect>

						</TextBlock>


						<!--//Toggle btn-->
						<ToggleButton x:Name="Tg_btn" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="18,-20,0,0" Height="30" Width="30" BorderThickness="0" Style="{StaticResource tb_style}" Unchecked="Tg_btn_Unchecked" Checked="Tg_btn_Checked">
							<ToggleButton.Background>
								<ImageBrush ImageSource="Assets/tgBtn_default.png" Stretch="None"></ImageBrush>
							</ToggleButton.Background>

							<!--//Check, uncheck event-->
							<ToggleButton.Triggers>
								<EventTrigger RoutedEvent="ToggleButton.Unchecked">
									<BeginStoryboard>
										<Storyboard x:Name="HideStackPanel">
											<DoubleAnimation Storyboard.TargetName="nav_pnl" Storyboard.TargetProperty="Width" BeginTime="0:0:0"
                                                             From="230" To="65" Duration="0:0:0.2">

											</DoubleAnimation>
										</Storyboard>
									</BeginStoryboard>
								</EventTrigger>

								<EventTrigger RoutedEvent="ToggleButton.Checked">
									<BeginStoryboard>
										<Storyboard x:Name="ShowStackPanel">
											<DoubleAnimation Storyboard.TargetName="nav_pnl" Storyboard.TargetProperty="Width" BeginTime="0:0:0"
                                                             From="65" To="230" Duration="0:0:0.3">

											</DoubleAnimation>
										</Storyboard>
									</BeginStoryboard>
								</EventTrigger>

							</ToggleButton.Triggers>
						</ToggleButton>
					</Grid>

					<!--//List items //ListView-->
					<ListView x:Name="LV" Background="Transparent" BorderBrush="Transparent"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
						<!--//HOME-->
						<ListViewItem HorizontalAlignment="Left" Margin="0,0,0,15" MouseEnter="ListViewItem_MouseEnter" 
                                      PreviewMouseLeftButtonDown="Image_PreviewMouseLeftButtonDown">
							<StackPanel Orientation="Horizontal" Width="230" PreviewMouseLeftButtonDown="Image_PreviewMouseLeftButtonDown">
								<Image Source="/Assets/img_home.png" Stretch="None" Margin="12,0,0,0" 
                                       PreviewMouseLeftButtonDown="Image_PreviewMouseLeftButtonDown"/>
								<TextBlock Text="Home" Margin="25,0,0,0" Style="{StaticResource font_style}" />
							</StackPanel>

							<ListViewItem.ToolTip>
								<ToolTip x:Name="tt_home" Content="HOME" Style="{StaticResource tt_style}" />
							</ListViewItem.ToolTip>
						</ListViewItem>

						
						<!--//Đại lý-->
						<ListViewItem HorizontalAlignment="Left" Margin="0,0,0,15" MouseEnter="ListViewItem_MouseEnter"
									  PreviewMouseLeftButtonDown="img_daily_PreviewMouseLeftButtonDown">
							<StackPanel  Orientation="Horizontal" Width="230" >
								<Image x:Name="img_DaiLy" Source="/Assets/iconDaiLy.png" Stretch="None" Margin="12,0,0,0" Width="30" Height="30"/>
								<TextBlock Text="Đại lý" Margin="25,0,0,0" Style="{StaticResource font_style}" />
							</StackPanel>

							<ListViewItem.ToolTip>
								<ToolTip x:Name="tt_daily" Content="ĐẠI LÝ" Style="{StaticResource tt_style}" />
							</ListViewItem.ToolTip>
						</ListViewItem>

                        <!--//Sản Phẩm-->
                        <ListViewItem HorizontalAlignment="Left" Margin="0,0,0,15" MouseEnter="ListViewItem_MouseEnter"
									  PreviewMouseLeftButtonDown="img_sanpham_PreviewMouseLeftButtonDown">
                            <StackPanel  Orientation="Horizontal" Width="230" >
                                <Image x:Name="img_sanpham" Source="/Assets/iconSanPham.png" Stretch="None" Margin="12,0,0,0" Width="30" Height="30"/>
                                <TextBlock Text="Sản phẩm" Margin="25,0,0,0" Style="{StaticResource font_style}" />
                            </StackPanel>

                            <ListViewItem.ToolTip>
                                <ToolTip x:Name="tt_sanpham" Content="SẢN PHẨM" Style="{StaticResource tt_style}" />
                            </ListViewItem.ToolTip>
                        </ListViewItem>

                        <!--//Phiếu thu tiền-->
                        <ListViewItem HorizontalAlignment="Left" Margin="0,0,0,15" MouseEnter="ListViewItem_MouseEnter"
									  PreviewMouseLeftButtonDown="img_phieuthutien_PreviewMouseLeftButtonDown">
                            <StackPanel  Orientation="Horizontal" Width="230" >
                                <Image x:Name="img_phieuthutien" Source="/Assets/iconPhieuThuTien.png" Stretch="None" Margin="12,0,0,0" Width="30" Height="30"/>
                                <TextBlock Text="Phiếu thu tiền" Margin="25,0,0,0" Style="{StaticResource font_style}" />
                            </StackPanel>

                            <ListViewItem.ToolTip>
                                <ToolTip x:Name="tt_phieuthutien" Content="THU TIỀN" Style="{StaticResource tt_style}" />
                            </ListViewItem.ToolTip>
                        </ListViewItem>

                        <!--//Phiếu xuất hàng-->
                        <ListViewItem HorizontalAlignment="Left" Margin="0,0,0,15" MouseEnter="ListViewItem_MouseEnter"
									  PreviewMouseLeftButtonDown="img_phieuxuathang_PreviewMouseLeftButtonDown">
                            <StackPanel  Orientation="Horizontal" Width="230" >
                                <Image x:Name="img_phieuxuathang" Source="/Assets/iconPhieuXuatHang.png" Stretch="None" Margin="12,0,0,0" Width="30" Height="30"/>
                                <TextBlock Text="Phiếu xuất hàng" Margin="25,0,0,0" Style="{StaticResource font_style}" />
                            </StackPanel>

                            <ListViewItem.ToolTip>
                                <ToolTip x:Name="tt_phieuxuathang" Content="XUẤT HÀNG" Style="{StaticResource tt_style}" />
                            </ListViewItem.ToolTip>
                        </ListViewItem>

                        <!--//Contact-->
						<ListViewItem HorizontalAlignment="Left" Margin="0,0,0,15" MouseEnter="ListViewItem_MouseEnter"
                                      PreviewMouseLeftButtonDown="img_contact_PreviewMouseLeftButtonDown">
							<StackPanel Orientation="Horizontal" Width="230" PreviewMouseLeftButtonDown="img_contact_PreviewMouseLeftButtonDown">
								<Image x:Name="img_contact" Source="/Assets/img_contact.png" Stretch="None" Margin="12,0,0,0" Height="46" VerticalAlignment="Top" PreviewMouseLeftButtonDown="img_contact_PreviewMouseLeftButtonDown" />
								<TextBlock Text="Contact" Margin="25,0,0,0" Style="{StaticResource font_style}" />
							</StackPanel>

							<ListViewItem.ToolTip>
								<ToolTip x:Name="tt_contact" Content="CONTACT" Style="{StaticResource tt_style}" />
							</ListViewItem.ToolTip>
						</ListViewItem>

						<!--//Style-->
						<ListView.ItemContainerStyle>
							<Style TargetType="ListViewItem">
								<Setter Property="Template">
									<Setter.Value>
										<ControlTemplate TargetType="{x:Type ListViewItem}">
											<Border x:Name="Bd" Height="50" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}"
                                                    Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="True">
												<ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                                  VerticalAlignment="{TemplateBinding VerticalAlignment}" />
											</Border>

											<ControlTemplate.Triggers>
												<MultiTrigger>
													<MultiTrigger.Conditions>
														<Condition Property="IsMouseOver" Value="True" />
													</MultiTrigger.Conditions>

													<Setter Property="Background" TargetName="Bd" Value="#404D5B" />
													<Setter Property="BorderBrush" TargetName="Bd" Value="#404D5B" />

												</MultiTrigger>
											</ControlTemplate.Triggers>
										</ControlTemplate>
									</Setter.Value>
								</Setter>
							</Style>
						</ListView.ItemContainerStyle>

					</ListView>

				</StackPanel>
			</Grid>
		</Grid>
	</Grid>
</Window>
