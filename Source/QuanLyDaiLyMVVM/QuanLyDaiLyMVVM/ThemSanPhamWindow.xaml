<Window x:Class="QuanLyDaiLyMVVM.ThemSanPhamWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyDaiLyMVVM"
        mc:Ignorable="d"
        Title="ThemSanPhamWindow" 
		
		xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        Height="700"
        Width="1024"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        WindowStartupLocation="CenterScreen"
		
		DataContext="{StaticResource ThemSanPhamVM}"
		Name="themSanPhamWindow">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="70"/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<!--Header-->
		<Border  Background="#2E333A"
                             Padding="10,0,0,0">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="150" />
					<ColumnDefinition Width="150" />
				</Grid.ColumnDefinitions>
				<TextBlock Grid.Column="0"
						   Text="Thêm sản phẩm"
						   HorizontalAlignment="Center"
						   VerticalAlignment="Center"
						   FontSize="35"
						   TextWrapping="WrapWithOverflow"
						   TextTrimming="CharacterEllipsis"
						   FontWeight="ExtraBold"
						   Foreground="#FFFFBD0B"
						   Background="{x:Null}" />

				<Button
					Grid.Column="1" Height="auto" Margin="10" 
						FontSize="20" FontWeight="Bold"
						Background="#18a0fb"
						Style="{StaticResource MaterialDesignRaisedDarkButton}"
						ToolTip="Lưu những thay đổi"
						Content="Lưu" />

				<Button
					Grid.Column="2" Height="auto" Margin="10"
						FontSize="20" FontWeight="Bold"
						Background="Red"
						Style="{StaticResource MaterialDesignRaisedDarkButton}"
						ToolTip="Trở về giao diện trước đó"
						Content="Thoát" />

			</Grid>
		</Border>

		<!--Content-->
		<ScrollViewer Grid.Row="1">
			<StackPanel>
				<Grid Height="500">
					<Grid.ColumnDefinitions>
						<ColumnDefinition/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>

					<!--Hinh anh-->
					<materialDesign:Card Margin="10">
						<Grid >
							<Grid.RowDefinitions>
								<RowDefinition Height="1.5*"/>
								<RowDefinition/>
							</Grid.RowDefinitions>
							<!--Anh chinh-->
							<materialDesign:Card>

								<Grid>
									<Grid.RowDefinitions>
										<RowDefinition/>
										<RowDefinition Height="70"/>
									</Grid.RowDefinitions>

									<materialDesign:Card UniformCornerRadius="10" Margin="5" >
										<materialDesign:Card.Background>
											<ImageBrush  ImageSource="{Binding SanPham.HinhAnh}" 
														 RenderOptions.BitmapScalingMode="HighQuality" Stretch="Uniform"></ImageBrush>
										</materialDesign:Card.Background>
									</materialDesign:Card>

									<Button x:Name="btnChooseImage" Grid.Row="1" Width="150"
										Grid.Column="1" Height="auto" Margin="10"
										FontSize="20" FontWeight="Bold"
										Style="{StaticResource MaterialDesignRaisedDarkButton}"
										ToolTip="Lưu những thay đổi"
										Content="Duyệt File" />

								</Grid>
							</materialDesign:Card>
							<!--Anh phu-->
							<Grid Grid.Row="1">
								<Grid.ColumnDefinitions>
									<ColumnDefinition/>
									<ColumnDefinition Width="110"/>
								</Grid.ColumnDefinitions>
								
								<ListView Grid.Column="0" ItemsSource="{Binding HinhAnhSanPhams}">
									<ListView.ItemsPanel>
										<ItemsPanelTemplate>
											<StackPanel Orientation="Horizontal" Margin="5"/>
										</ItemsPanelTemplate>
									</ListView.ItemsPanel>
									<ListView.ItemTemplate>
										<DataTemplate>
											<materialDesign:Card>
												<Grid Width="100">
													<Grid.RowDefinitions>
														<RowDefinition Height="80"/>
														<RowDefinition Height="55"/>
													</Grid.RowDefinitions>
													<Image Source="{Binding HinhAnh}" 
									   RenderOptions.BitmapScalingMode="HighQuality"
									   HorizontalAlignment="Center" VerticalAlignment="Center"
									   Stretch="UniformToFill"/>

													<Button Grid.Row="1"  
														Style="{StaticResource MaterialDesignIconButton}"
														ToolTip="MaterialDesignIconButton" Margin="5">
														<materialDesign:PackIcon 
														Kind="Delete"
														Foreground="Red"
														VerticalAlignment="Center" 
														HorizontalAlignment="Center" />
													</Button>

												</Grid>

											</materialDesign:Card>
										</DataTemplate>
									</ListView.ItemTemplate>
								</ListView>

								<Button Width="auto"
								Grid.Column="2" Height="60" Margin="5"
								ToolTip="Thêm hình ảnh sản phẩm"
								Style="{StaticResource MaterialDesignOutlinedButton}"
								>
									<Grid>
										<Grid.RowDefinitions>
											<RowDefinition />
											<RowDefinition/>
										</Grid.RowDefinitions>

										<materialDesign:PackIcon Kind="PlusCircle" Width="100" Height="25" HorizontalAlignment="Center"/>
										<TextBlock Text="Thêm ảnh" HorizontalAlignment="Center" Grid.Row="1"/>
									</Grid>
								</Button>
							</Grid>

						</Grid>
					</materialDesign:Card>

					<!--Du lieu-->
					<Grid Grid.Column="1">
						<Grid.RowDefinitions>
							<RowDefinition Height="80"/>
							<RowDefinition Height="80"/>
							<RowDefinition Height="80"/>
							<RowDefinition/>
							<RowDefinition/>
							<RowDefinition/>
						</Grid.RowDefinitions>

						<TextBox Margin="5,10"  materialDesign:HintAssist.Hint="Tên sản phẩm"
							  materialDesign:TextFieldAssist.TextBoxViewMargin="1 0 1 0"
							  materialDesign:HintAssist.FloatingScale="0.50"
							  Text="{Binding SanPham.Ten}"
							  ToolTip="{Binding SanPham.Ten}"
							  FontWeight="ExtraBold"
								  Foreground="Blue"
							  Style="{StaticResource MaterialDesignFloatingHintTextBox}"
							  FontSize="22" />

						<TextBox Margin="5,10"  Grid.Row="1"
								  materialDesign:HintAssist.Hint="Giá bán"
							Style="{StaticResource MaterialDesignFloatingHintTextBox}"
							Text="{Binding SanPham.GiaBan}" FontSize="20" Foreground="Red"
						    FontWeight="Bold"	  Padding="5"
							VerticalAlignment="Center"
							materialDesign:TextFieldAssist.PrefixText=" đ "
							materialDesign:TextFieldAssist.SuffixText="VNĐ">
						</TextBox>

						<TextBox Margin="5,10"  Grid.Row="2"
								  materialDesign:HintAssist.Hint="Giá nhập"
							Style="{StaticResource MaterialDesignFloatingHintTextBox}"
							Text="{Binding SanPham.GiaNhap}" FontSize="20" Foreground="Red"
						    FontWeight="Bold"	  Padding="5"
							VerticalAlignment="Center"
							materialDesign:TextFieldAssist.PrefixText=" đ "
							materialDesign:TextFieldAssist.SuffixText="VNĐ">
						</TextBox>

						<!--Số lượng, đơn vị tính-->
						<Grid Grid.Row="3" Margin="5,10">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="2.5*"/>
								<ColumnDefinition Width="*"/>
								<ColumnDefinition Width="125"/>
							</Grid.ColumnDefinitions>

							<TextBox Margin="5,10" materialDesign:HintAssist.Hint="Số lượng"
									  Style="{StaticResource MaterialDesignFloatingHintTextBox}"
									  VerticalAlignment="Center" FontWeight="Bold"
									 Text="{Binding SanPham.SoLuong}" FontSize="20"/>

							<ComboBox Grid.Column="1" materialDesign:HintAssist.Hint="Đơn vị tính"
									  ItemsSource="{Binding DonViTinhs}" SelectedItem="{Binding DonViTinh}"
									  HorizontalAlignment="Center" Padding="5,15">
								<ComboBox.ItemsPanel>
									<ItemsPanelTemplate>
										<VirtualizingStackPanel />
									</ItemsPanelTemplate>
								</ComboBox.ItemsPanel>
								<ComboBox.ItemTemplate>
									<DataTemplate>
										<TextBlock Text="{Binding Ten}"/>
									</DataTemplate>
								</ComboBox.ItemTemplate>
							</ComboBox>

							<Button Width="auto" Command="{Binding ThemDonViCommand}"
								Grid.Column="2" Height="auto" Margin="5"
								ToolTip="Thêm đơn vị tính"
								Style="{StaticResource MaterialDesignOutlinedButton}"
								>
								<Grid>
									<Grid.RowDefinitions>
										<RowDefinition />
										<RowDefinition/>
									</Grid.RowDefinitions>

									<materialDesign:PackIcon Kind="PlusCircle" Width="100" Height="25" HorizontalAlignment="Center"/>
									<TextBlock Text="Thêm đơn vị" HorizontalAlignment="Center" Grid.Row="1"/>
								</Grid>
							</Button>
						</Grid>

						<!--Loại sản phẩm-->
						<Grid Grid.Row="4" Margin="5,10">
							<Grid.ColumnDefinitions>
								<ColumnDefinition/>
								<ColumnDefinition Width="125"/>
							</Grid.ColumnDefinitions>
							<ComboBox  materialDesign:HintAssist.Hint="Loại sản phẩm" 
									   ItemsSource="{Binding LoaiSanPhams}" SelectedItem="{Binding LoaiSanPham}" Margin="5,0" >
								<ComboBox.ItemsPanel>
									<ItemsPanelTemplate>
										<VirtualizingStackPanel />
									</ItemsPanelTemplate>
								</ComboBox.ItemsPanel>
								<ComboBox.ItemTemplate>
									<DataTemplate>
										<Grid>
											<Grid.ColumnDefinitions>
												<ColumnDefinition Width="80"/>
												<ColumnDefinition/>
											</Grid.ColumnDefinitions>
											<Image Source="{Binding HinhAnh}" RenderOptions.BitmapScalingMode="HighQuality" Stretch="Uniform"/>
											<TextBlock Grid.Column="1" Text="{Binding Ten}" FontWeight="Bold" Margin="10" VerticalAlignment="Center"/>
										</Grid>
									</DataTemplate>
								</ComboBox.ItemTemplate>
							</ComboBox>

							<Button Width="auto" Command="{Binding ThemLoaiSanPhamCommand}"
								Grid.Column="2" Height="auto" Margin="5"
								ToolTip="Thêm loại sản phẩm"
								Style="{StaticResource MaterialDesignOutlinedButton}"
								>
								<Grid>
									<Grid.RowDefinitions>
										<RowDefinition />
										<RowDefinition/>
									</Grid.RowDefinitions>

									<materialDesign:PackIcon Kind="PlusCircle" Width="100" Height="25" HorizontalAlignment="Center"/>
									<TextBlock Text="Thêm loại" HorizontalAlignment="Center" Grid.Row="1"/>
								</Grid>
							</Button>
						</Grid>

						<!--Nguồn nhập-->
						<Grid Grid.Row="5" Margin="5,10">
							<Grid.ColumnDefinitions>
								<ColumnDefinition/>
								<ColumnDefinition Width="125"/>
							</Grid.ColumnDefinitions>
							<ComboBox  materialDesign:HintAssist.Hint="Nguồn nhập" 
									   ItemsSource="{Binding NguonNhaps}" SelectedItem="{Binding NguonNhap}"
									   Margin="5,0" >
								<ComboBox.ItemsPanel>
									<ItemsPanelTemplate>
										<VirtualizingStackPanel />
									</ItemsPanelTemplate>
								</ComboBox.ItemsPanel>
								<ComboBox.ItemTemplate>
									<DataTemplate>
										<Grid>
											<Grid.ColumnDefinitions>
												<ColumnDefinition Width="100"/>
												<ColumnDefinition/>
											</Grid.ColumnDefinitions>
											<Image Source="{Binding HinhAnh}" RenderOptions.BitmapScalingMode="HighQuality" Stretch="Uniform"/>

											<Grid Grid.Column="1" Margin="5">
												<Grid.RowDefinitions>
													<RowDefinition/>
													<RowDefinition/>
													<RowDefinition/>
												</Grid.RowDefinitions>
												<TextBlock Text="{Binding Ten}" FontWeight="Bold" VerticalAlignment="Center"/>
												<TextBlock Grid.Row="1" Text="{Binding SoDienThoai}" VerticalAlignment="Center"/>
												<TextBlock Grid.Row="2" Text="{Binding DiaChi}" 
														   TextWrapping="WrapWithOverflow" TextTrimming="WordEllipsis" VerticalAlignment="Center"
														   ToolTip="{Binding DiaChi}"/>
											</Grid>
										</Grid>
									</DataTemplate>
								</ComboBox.ItemTemplate>
							</ComboBox>

							<Button Width="auto" Command="{Binding ThemNguonNhapCommand}"
								Grid.Column="2" Height="auto" Margin="5"
								ToolTip="Thêm loại sản phẩm"
								Style="{StaticResource MaterialDesignOutlinedButton}"
								>
								<Grid>
									<Grid.RowDefinitions>
										<RowDefinition />
										<RowDefinition/>
									</Grid.RowDefinitions>

									<materialDesign:PackIcon Kind="PlusCircle" Width="100" Height="25" HorizontalAlignment="Center"/>
									<TextBlock Text="Thêm nguồn" HorizontalAlignment="Center" Grid.Row="1"/>
								</Grid>
							</Button>
						</Grid>
					</Grid>


				</Grid>

				<!--Mô tả sp-->
				<materialDesign:Card Margin="10, 5, 10, 20">
					<StackPanel>
						<TextBlock Text="Mô tả sản phẩm" 
								   HorizontalAlignment="Center" Margin="10"
								   FontSize="24" FontWeight="Black"
								   Foreground="Blue"/>
						<TextBox  Margin="10" TextWrapping="Wrap"  
							  VerticalAlignment="Stretch"
						  MinWidth="280"  AcceptsReturn="True"
						  VerticalScrollBarVisibility="Auto"
						  SpellCheck.IsEnabled="True"
							  FontSize="16"
						  materialDesign:HintAssist.Hint="Mô tả sản phẩm"
						  Height="auto" MinHeight="70"
						  Text="{Binding SanPham.MoTa}" />
					</StackPanel>
				</materialDesign:Card>
			</StackPanel>
		</ScrollViewer>
	</Grid>
</Window>
