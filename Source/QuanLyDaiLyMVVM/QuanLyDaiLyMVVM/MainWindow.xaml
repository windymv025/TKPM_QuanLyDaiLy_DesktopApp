                                                         Width="40"
                                                         Height="40"
                                                         Margin="0,0,10,0"
                                                         Panel.ZIndex="5"
                                                         HorizontalAlignment="Right"
                                                         VerticalAlignment="Center" />
                            </Grid>

                            <Border CornerRadius="10"
                                    Grid.Column="1">
                                <ComboBox Padding="5,15,0,15"
                                          Background="White"
                                          HorizontalAlignment="Right"
                                          Width="120">
                                    <ComboBoxItem IsSelected="True">
                                        <TextBlock Text="Đại lý"
                                                   FontWeight="Bold" />
                                    </ComboBoxItem>
                                    <ComboBoxItem>
                                        <TextBlock Text="Sản phẩm"
                                                   FontWeight="Bold" />
                                    </ComboBoxItem>
                                    <ComboBoxItem>
                                        <TextBlock Text="Nhà cung cấp"
