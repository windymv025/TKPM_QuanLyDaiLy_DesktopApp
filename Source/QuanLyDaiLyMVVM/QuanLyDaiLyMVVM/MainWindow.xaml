                                    Margin="40,0">
                                <Border.Background>
                                    <ImageBrush Stretch="Fill"
                                                ImageSource="Assets/podium_awards.png" />
                                </Border.Background>

                                <Grid Margin="35,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="1.2*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <!--top 2-->
                                    <StackPanel x:Name="spSanPhamTop2"
                                                MouseDown="spSanPhamTop2_MouseDown"
