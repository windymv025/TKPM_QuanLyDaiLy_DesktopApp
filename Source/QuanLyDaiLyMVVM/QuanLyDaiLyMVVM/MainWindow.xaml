                                                 BorderThickness="2"
                                                 CornerRadius="20"
                                                 Height="130"
                                                 Width="200">
                                            <Border.Background>
                                                <ImageBrush x:Name="imgSanPhamTop1"
                                                            ImageSource="{Binding SanPhamTop1.HinhAnh}"
                                                            Stretch="Uniform" />
                                            </Border.Background>
											<materialDesign:Card
												Foreground="Blue"
												Background="Yellow"
												VerticalAlignment="Bottom"
                                                HorizontalAlignment="Center"
												 Margin="10,0,10,5"
                                                 Padding="5,5" >

												<TextBlock Text="{Binding SanPhamTop1.Ten}"
                                                       FontSize="13"
                                                       FontWeight="DemiBold"
                                                       VerticalAlignment="Bottom"
                                                       HorizontalAlignment="Center"
                                                       TextTrimming="CharacterEllipsis"
                                                      />
											</materialDesign:Card>
											
                                        </Border>
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center">
                                            <TextBlock Text="Đã bán: "
                                                       FontSize="14"
                                                       FontWeight="Black"
                                                       Foreground="Black" />
											<TextBlock  Text="{Binding SanPhamTop1.SoLuong}"
                                                        FontSize="14"
                                                        FontWeight="Black"
                                                        Foreground="Red" />
                                        </StackPanel>
                                    </StackPanel>

                                    <!--top 3-->
                                    <StackPanel DataContext="{Binding SanPhamTop3}"
                                                Grid.Column="2"
                                                VerticalAlignment="Top"
                                                HorizontalAlignment="Left">

										<i:Interaction.Triggers>
											<i:EventTrigger EventName="MouseDown">
												<i:InvokeCommandAction 
													Command="{Binding SanPhamTop3_MouseDownCommand}" 
													CommandParameter="{Binding ElementName=mainWindow}" />
											</i:EventTrigger>
										</i:Interaction.Triggers>

										<Border  Margin="0,50,0,0"
                                                 BorderBrush="red"
                                                 BorderThickness="2"
                                                 CornerRadius="20"
                                                 Height="130"
                                                 Width="200">
                                            <Border.Background>
                                                <ImageBrush ImageSource="{Binding HinhAnh}"
                                                            Stretch="Uniform" />

                                            </Border.Background>
											<materialDesign:Card
												Background="Yellow"
												Foreground="Blue"
												VerticalAlignment="Bottom"
                                                HorizontalAlignment="Center"
												 Margin="10,0,10,5"
                                                 Padding="5,5" >

												<TextBlock Text="{Binding Ten}"
                                                       FontSize="13"
                                                       FontWeight="DemiBold"
                                                       VerticalAlignment="Bottom"
                                                       HorizontalAlignment="Center"
                                                       TextTrimming="CharacterEllipsis"
                                                      />
											</materialDesign:Card>

										</Border>
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center">
                                            <TextBlock Text="Đã bán: "
                                                       FontSize="14"
                                                       FontWeight="Black"
                                                       Foreground="Black" />
                                            <TextBlock Text="{Binding SoLuong}"
                                                       FontSize="14"
                                                       FontWeight="Black"
                                                       Foreground="Red" />
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </materialDesign:Card>

                            <!--Top Đại lý-->
							<materialDesign:Card Margin="10,20,10,15" Background="#03a9f4"
								Foreground="{DynamicResource PrimaryHueLightForegroundBrush}"
								  Padding="8">
								<TextBlock Text="Đại lý top đầu"
                                       FontSize="25"
                                       HorizontalAlignment="Center"
                                       Foreground="White"
                                       FontWeight="UltraBlack"
                                       materialDesign:ThemeAssist.Theme="Dark"
                                       FontFamily="Cooper Black" />
							</materialDesign:Card>

							<materialDesign:Card Height="255"
                                    Margin="40,0, 40, 20">
								<materialDesign:Card.Background>
                                    <ImageBrush Stretch="Fill"
                                                ImageSource="Assets/podium_awards.png" />
                                </materialDesign:Card.Background>

                                <Grid Margin="35,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="1.2*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <!--top 2-->
                                    <StackPanel DataContext="{Binding DaiLyTop2}"
                                                MouseDown="spDaiLyTop2_MouseDown"
                                                VerticalAlignment="Top"
                                                HorizontalAlignment="Right">

										<i:Interaction.Triggers>
											<i:EventTrigger EventName="MouseDown">
												<i:InvokeCommandAction 
													Command="{Binding DaiLyTop2_MouseDownCommand}" 
													CommandParameter="{Binding ElementName=mainWindow}" />
											</i:EventTrigger>
										</i:Interaction.Triggers>
										
										<Border Margin="0,45,0,0"
                                                BorderBrush="Red"
                                                BorderThickness="2"
                                                CornerRadius="20"
                                                Height="120"
                                                Width="200">
                                            <Border.Background>
                                                <ImageBrush x:Name="imgDaiLyTop2"
                                                            ImageSource="{Binding HinhAnh}"
                                                            Stretch="Uniform" />

                                            </Border.Background>
											<materialDesign:Card
												Background="Yellow"
												Foreground="Blue"
												VerticalAlignment="Bottom"
                                                HorizontalAlignment="Center"
												 Margin="10,0,10,5"
                                                 Padding="5,5" >

												<TextBlock Text="{Binding Ten}"
                                                       FontSize="13"
                                                       FontWeight="DemiBold"
                                                       VerticalAlignment="Bottom"
                                                       HorizontalAlignment="Center"
                                                       TextTrimming="CharacterEllipsis"
                                                      />
											</materialDesign:Card>
										</Border>
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center">
                                            <TextBlock x:Name="txtDaiLyTop2"
                                                       Text="{Binding TongTienXuat}"
                                                       FontSize="14"
                                                       FontWeight="Black"
                                                       Foreground="Red" />
                                            <TextBlock Text=" VNĐ"
                                                       FontSize="14"
                                                       FontWeight="Black"
                                                       Foreground="Red" />
                                        </StackPanel>
                                    </StackPanel>

                                    <!--top 1-->
                                    <StackPanel DataContext="{Binding DaiLyTop1}"
                                                MouseDown="spDaiLyTop1_MouseDown"
                                                Grid.Column="1"
                                                VerticalAlignment="Top"
                                                HorizontalAlignment="Center">
										
										<i:Interaction.Triggers>
											<i:EventTrigger EventName="MouseDown">
												<i:InvokeCommandAction 
													Command="{Binding DaiLyTop1_MouseDownCommand}" 
													CommandParameter="{Binding ElementName=mainWindow}" />
											</i:EventTrigger>
										</i:Interaction.Triggers>
										
                                        <Border  Margin="0,0,0,0"
                                                 BorderBrush="red"
                                                 BorderThickness="2"
                                                 CornerRadius="20"
                                                 Height="130"
                                                 Width="200">
                                            <Border.Background>
                                                <ImageBrush ImageSource="{Binding HinhAnh}"
                                                            Stretch="Uniform" />

                                            </Border.Background>
											<materialDesign:Card
												Background="Yellow"
												Foreground="Blue"
												VerticalAlignment="Bottom"
                                                HorizontalAlignment="Center"
												 Margin="10,0,10,5"
                                                 Padding="5,5" >

												<TextBlock Text="{Binding Ten}"
                                                       FontSize="13"
                                                       FontWeight="DemiBold"
                                                       VerticalAlignment="Bottom"
                                                       HorizontalAlignment="Center"
                                                       TextTrimming="CharacterEllipsis"
                                                      />
											</materialDesign:Card>
										</Border>
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding TongTienXuat}"
                                                       FontSize="14"
                                                       FontWeight="Black"
                                                       Foreground="Red" />
                                            <TextBlock Text=" VNĐ"
                                                       FontSize="14"
                                                       FontWeight="Black"
                                                       Foreground="Red" />

                                        </StackPanel>
                                    </StackPanel>

                                    <!--top 3-->
                                    <StackPanel DataContext="{Binding DaiLyTop3}"
                                                MouseDown="spDaiLyTop3_MouseDown"
                                                Grid.Column="2"
                                                VerticalAlignment="Top"
                                                HorizontalAlignment="Left">

										<i:Interaction.Triggers>
											<i:EventTrigger EventName="MouseDown">
												<i:InvokeCommandAction 
													Command="{Binding DaiLyTop3_MouseDownCommand}" 
													CommandParameter="{Binding ElementName=mainWindow}" />
											</i:EventTrigger>
										</i:Interaction.Triggers>

										<Border   Margin="0,50,0,0"
                                                  BorderBrush="Red"
                                                  BorderThickness="2"
                                                  CornerRadius="20"
                                                  Height="130"
                                                  Width="200">
                                            <Border.Background>
                                                <ImageBrush x:Name="imgDaiLyTop3"
                                                            ImageSource="{Binding HinhAnh}"
                                                            Stretch="Uniform" />
                                            </Border.Background>
											<materialDesign:Card
												Background="Yellow"
												Foreground="Blue"
												VerticalAlignment="Bottom"
                                                HorizontalAlignment="Center"
												 Margin="10,0,10,5"
                                                 Padding="5,5" >

												<TextBlock Text="{Binding Ten}"
                                                       FontSize="13"
                                                       FontWeight="DemiBold"
                                                       VerticalAlignment="Bottom"
                                                       HorizontalAlignment="Center"
                                                       TextTrimming="CharacterEllipsis"
                                                      />
											</materialDesign:Card>
										</Border>
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding TongTienXuat}"
                                                       FontSize="14"
                                                       FontWeight="Black"
                                                       Foreground="Red" />
                                            <TextBlock Text=" VNĐ"
                                                       FontSize="14"
                                                       FontWeight="Black"
                                                       Foreground="Red" />
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>

                            </materialDesign:Card>
                        </StackPanel>
                    </ScrollViewer>

                </Grid>
            </Grid>


            <!--//navigation panel // bảng điều hướng-->
            <Grid x:Name="nav_pnl"
                  HorizontalAlignment="Left"
                  Width="65"
                  Background="#2E333A">
                <StackPanel x:Name="st_pnl">
                    <!--//Grid chuyển đổi menu-->
                    <Grid Height="90">
                        <!--//text tiêu để menu-->
                        <TextBlock Grid.Row="1"
                                   Grid.Column="0"
                                   Margin="73,-20,0,0"
                                   Text="MENU"
                                   Foreground="White"
                                   FontSize="22"
                                   Background="Transparent"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Style="{StaticResource font_style}">
                            
                            <!--//Shadow-->
                            <TextBlock.Effect>
                                <DropShadowEffect BlurRadius="10"
                                                  ShadowDepth="1"
                                                  Direction="-90"
                                                  Color="White" />
                            </TextBlock.Effect>

                        </TextBlock>


                        <!--//Toggle btn-->
                        <ToggleButton x:Name="Tg_btn"
                                      Grid.Column="0"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left"
                                      Margin="18,-20,0,0"
                                      Height="30"
                                      Width="30"
                                      BorderThickness="0"
                                      Style="{StaticResource tb_style}"
                                      Unchecked="Tg_btn_Unchecked"
                                      Checked="Tg_btn_Checked">
                            <ToggleButton.Background>
                                <ImageBrush ImageSource="Assets/tgBtn_default.png"
                                            Stretch="None"></ImageBrush>
                            </ToggleButton.Background>

                            <!--//Check, uncheck event-->
                            <ToggleButton.Triggers>
                                <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                                    <BeginStoryboard>
                                        <Storyboard x:Name="HideStackPanel">
                                            <DoubleAnimation Storyboard.TargetName="nav_pnl"
                                                             Storyboard.TargetProperty="Width"
                                                             BeginTime="0:0:0"
                                                             From="230"
                                                             To="65"
                                                             Duration="0:0:0.2">

                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>

                                <EventTrigger RoutedEvent="ToggleButton.Checked">
                                    <BeginStoryboard>
                                        <Storyboard x:Name="ShowStackPanel">
                                            <DoubleAnimation Storyboard.TargetName="nav_pnl"
                                                             Storyboard.TargetProperty="Width"
                                                             BeginTime="0:0:0"
                                                             From="65"
                                                             To="230"
                                                             Duration="0:0:0.3">

                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>

                            </ToggleButton.Triggers>
                        </ToggleButton>
                    </Grid>

                    <!--//List items //ListView-->
                    <ListView x:Name="LV"
                              Background="Transparent"
                              BorderBrush="Transparent"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <!--//HOME-->
                        <ListViewItem HorizontalAlignment="Left"
                                      Margin="0,0,0,15"
                                      MouseEnter="ListViewItem_MouseEnter"
                                      PreviewMouseLeftButtonDown="Image_PreviewMouseLeftButtonDown">
                            <StackPanel Orientation="Horizontal"
                                        Width="230">
                                <materialDesign:PackIcon Kind="Home"
                                                         Foreground="LightBlue"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"
                                                         Width="30"
                                                         Height="30"
                                                         Margin="12,0,0,0" />
                                <TextBlock Text="Trang chủ"
                                           Margin="25,0,0,0"
                                           Style="{StaticResource font_style}" />
                            </StackPanel>

                            <ListViewItem.ToolTip>
                                <ToolTip x:Name="tt_home"
                                         Content="HOME"
                                         Style="{StaticResource tt_style}" />
                            </ListViewItem.ToolTip>
                        </ListViewItem>


                        <!--//Đại lý-->
                        <ListViewItem HorizontalAlignment="Left"
                                      Margin="0,0,0,15"
                                      MouseEnter="ListViewItem_MouseEnter">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                    <i:InvokeCommandAction Command="{Binding DaiLyShowCommand}" CommandParameter="{Binding ElementName=Tg_btn}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <StackPanel  Orientation="Horizontal"
                                         Width="230">
                                <materialDesign:PackIcon Kind="HumanGreeting"
                                                         Foreground="GreenYellow"
                                                         Width="30"
                                                         Height="30"
                                                         HorizontalAlignment="Center"
